@model IEnumerable<ShiNengShiHui.Web.Models.Teacher.Grade.GradeResultViewModel>

@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        var sid;

        $("#delete").click(function () {
            var message = "你确定要删除勾选的记录吗?将删除学生成绩，删除后数据将不可恢复！";
            if ($(this).attr("message"))
                message = $(this).attr("message") + "，" + message;
            bootbox.confirm(message, function (result) {
                if (result) {
                    $("#mainForm").submit();
                }
            });
        });

        $("#BatchImportStudents").click(function () {
            $.upload({
                url: '@Url.Action("GradeCereateOfExcel")',
                fileName: 'file',
                dataType: 'json',
                validateAntiForgeryToken:'@Html.AntiForgeryToken()',
                onSend: function () {
                    return true;
                },
                onSubmit: function () {
                    bootbox.alert("请选择导入的Excel表格，导入过程需要较长时间，请耐心等待！");
                },
                onComplate: function (jsdata) {
                    if (jsdata.result.statu == "Success") {
                        bootbox.alert(jsdata.result.msg, function () {
                            location.reload();
                        });
                    } else {
                        bootbox.alert("导入失败！" + jsdata.result.msg);
                    }
                }
            });
        });

        $("#serchButton").click(function () {
            $("#serchForm").submit();
        })
    </script>
}

<div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <i class="fa fa-info-circle"></i> 批量导入功能可以通过Excel表格导入学生信息，为保证系统性能，单次导入学生数量不可超过500人。导入的Excel模板请点击<a class="green" href="@Url.Action("GradeExcelDown")"> 这里下载</a>。
</div>




<div class="panel">
    <div class="panel-heading">
        <a class="btn btn-danger" id="delete" href="javascript:;"><i class="fa fa-trash-o"></i> 删除</a>
        <a class="btn btn-success thickbox" title='添加新用户' href="@Url.Action("GradeCreate")?TB_iframe=true&height=450&width=500"><i class="fa fa-plus" aria-hidden="true"></i> 新增</a>
        <a class="btn btn-default" id="BatchImportStudents" href="javascript:;"><i class="fa fa-folder-open" aria-hidden="true"></i> 批量导入</a>

        <div class="right col-lg-6">
            @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "serchForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-lg-6">
                    @Html.DropDownList("selectd", ViewBag.SelectList as List<SelectListItem>, new { @class="form-control"})
                </div>

                <div class="col-lg-4">
                    @Html.TextBox("dateTime", null, new { id = "datetimepicker", @class = "form-control" })
                </div>
                
                <a class="btn btn-info" id="serchButton" href="javascript:;"><i class="fa fa-search"></i>查找</a>
            }
        </div>
    </div>
    @using (Html.BeginForm("GradeDelete", "Teacher", FormMethod.Post, new { id = "mainForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="panel-body">
            <table class="table table-striped table-hover ">

                <thead>
                    <tr>
                        <th style="width: 8px;">
                            <input type="checkbox" id="checkall" class="group-checkable" />
                        </th>
                        <th>序号</th>
                        <th>姓名</th>
                        <th>时间</th>
                        <th>学期</th>
                        <th>敬</th>
                        <th>善</th>
                        <th>净</th>
                        <th>捡</th>
                        <th>勤</th>
                        <th>静</th>
                        <th>厚</th>
                        <th>乐</th>
                        <th>跑</th>
                        <th>勇</th>
                        <th>总分</th>
                        <th>扣分原因</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                    {

                    }
                    else
                    {
                        int i = 1;
                        foreach (ShiNengShiHui.Web.Models.Teacher.Grade.GradeResultViewModel m in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="checkboxes" name='id' value='@m.Id' />
                                </td>
                                <td>@i</td>
                                <td>@m.StudentName</td>
                                <td>@m.DateTime</td>
                                <td>@m.SchoolYearAndMore</td>
                                <td>@m.Respect</td>
                                <td>@m.Kind</td>
                                <td>@m.Clean</td>
                                <td>@m.Saves</td>
                                <td>@m.Industrious</td>
                                <td>@m.Quiet</td>
                                <td>@m.Honest</td>
                                <td>@m.Enjoy</td>
                                <td>@m.Vigour</td>
                                <td>@m.Brave</td>
                                <td>@m.Sums</td>
                                <td>@m.PenaltyReason</td>
                                <td>
                                    <a class="btn btn-info thickbox" title='编辑用户资料' href="@Url.Action("GradeEdit", new { id = m.Id })?TB_iframe=true&height=450&width=500">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        编辑
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }


                </tbody>
            </table>
        </div>
    }
</div>



@if (Model == null)
{

}
else
{
    int pageIndex = (int)ViewData["pageIndex"];
    int pageCount = (int)ViewData["pageCount"];

    string selectd = ViewData["selectd"].ToString();
    string dateTime = ViewData["dateTime"].ToString();

    <div class="text-right">


        <ul class="pagination">
            <li><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=1,selectd=selectd,dateTime=dateTime})">首页</a></li>
            @if (pageIndex <= 5)
            {
                for (int i = 1, length = pageCount; i <= length; i++)
                {
                    if (pageIndex == i)
                    {
                        <li class="active"><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                    }
                }
            }
            else
            {
                if (pageIndex >= 3 && pageIndex <= pageCount - 2)
                {
                    for (int i = pageIndex - 2; i < pageIndex + 2; i++)
                    {
                        if (pageIndex == i)
                        {
                            <li class="active"><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                        }
                    }
                }
                else
                {
                    if (pageIndex <= 2)
                    {
                        for (int i = 1; i <= 5; i++)
                        {
                            if (pageIndex == i)
                            {
                                <li class="active"><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                            }
                        }
                    }
                    else
                    {
                        for (int i = pageCount - 4; i <= pageCount; i++)
                        {
                            if (pageIndex == i)
                            {
                                <li class="active"><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=i,selectd=selectd,dateTime=dateTime})">@i</a></li>
                            }
                        }
                    }
                }
            }
            <li><a href="@Url.Action("GradeIndex","Teacher",new { pageIndex=pageCount,selectd=selectd,dateTime=dateTime })">尾页</a></li>
        </ul>

    </div>
}