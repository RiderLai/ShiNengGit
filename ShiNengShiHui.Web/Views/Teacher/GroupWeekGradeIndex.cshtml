@model IEnumerable<ShiNengShiHui.Web.Models.Teacher.Grade.GroupWeekGradeShowModel>
@{
    ViewBag.Title = "GroupWeekGradeIndex";
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $("#showButton").click(function () {
            $("#showForm").submit();
        })
    </script>
}

<div class="panel">
    <div class="panel-heading">
        <a class="btn btn-success thickbox" title='添加优胜组' href="@Url.Action("GroupWeekCreate")?TB_iframe=true&height=450&width=500"><i class="fa fa-plus" aria-hidden="true"></i> 新增</a>

        <div class="right col-lg-6">
            @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "showForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-lg-3">
                    @Html.DropDownList("schoolyear", ViewBag.SchoolYear as List<SelectListItem>, new { @class = "form-control" })
                </div>

                <div class="col-lg-3">
                    @Html.DropDownList("semester", ViewBag.Semester as List<SelectListItem>, new { @class = "form-control" })
                </div>
                <a class="btn btn-info" title='查看' href="javascript:;" id="showButton"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>查看</a>
            }
        </div>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-hover ">

            <thead>
                <tr>
                    <th>序号</th>
                    <th>组号</th>
                    <th>时间</th>
                    <th>是否是优秀团队</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {

                }
                else
                {
                    int i = 1;
                    foreach (ShiNengShiHui.Web.Models.Teacher.Grade.GroupWeekGradeShowModel m in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@m.Group</td>
                            <td>@(m.Date.SchoolYear + "学年  " + m.Date.Semester + "学期  第" + m.Date.Week + "周")</td>
                            <td>
                                @if (m.IsWell)
                                {
                                    <span>是</span>
                                }
                                else
                                {
                                    <span>否</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-info thickbox" title='编辑' href="@Url.Action("GroupWeekUpdate", new { id = m.Id })?TB_iframe=true&height=450&width=500">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    编辑
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }


            </tbody>
        </table>
    </div>
</div>

@if (Model == null)
{

}
else
{
    int pageIndex = (int)ViewData["pageIndex"];
    int pageCount = (int)ViewData["pageCount"];

    <div class="text-right">


        <ul class="pagination">
            <li><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=1})">首页</a></li>
            @if (pageIndex <= 5)
            {
                for (int i = 1, length = pageCount; i <= length; i++)
                {
                    if (pageIndex == i)
                    {
                        <li class="active"><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                    }
                }
            }
            else
            {
                if (pageIndex >= 3 && pageIndex <= pageCount - 2)
                {
                    for (int i = pageIndex - 2; i < pageIndex + 2; i++)
                    {
                        if (pageIndex == i)
                        {
                            <li class="active"><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                        }
                    }
                }
                else
                {
                    if (pageIndex <= 2)
                    {
                        for (int i = 1; i <= 5; i++)
                        {
                            if (pageIndex == i)
                            {
                                <li class="active"><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                            }
                        }
                    }
                    else
                    {
                        for (int i = pageCount - 4; i <= pageCount; i++)
                        {
                            if (pageIndex == i)
                            {
                                <li class="active"><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=i})">@i</a></li>
                            }
                        }
                    }
                }
            }
            <li><a href="@Url.Action("GroupWeekGradeIndex","Teacher",new { pageIndex=pageCount })">尾页</a></li>
        </ul>

    </div>
}