@model ShiNengShiHui.AppServices.TeacherDTO.GroupWeekGradeUpdate
@{
    ViewBag.Title = "GroupWeekUpdate";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}

@Html.AntiForgeryToken()
<div class="portlet-body form-horizontal form-bordered form-row-stripped">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label class="col-xs-4 control-label text-right">组号：</label>
        <div class="col-xs-6">
            @Html.Label(ViewData["GroupId"].ToString(), new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <label class="col-xs-4 control-label text-right">学年：</label>
        <div class="col-xs-6">
            @Html.Label(ViewData["SchoolYear"].ToString() + "学年", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-4 control-label text-right">学期：</label>
        <div class="col-xs-6">
            @Html.Label(ViewData["Semester"].ToString() + "学期", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-4 control-label text-right">周：</label>
        <div class="col-xs-6">
            @Html.Label("第" + ViewData["Week"].ToString() + "周", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-4 control-label text-right">是否优秀团队：</label>
        <div class="col-xs-6">
            @Html.CheckBoxFor(m => m.IsWell, new { @class = "form-control" })
            <span class="help-inline">@Html.ValidationMessageFor(m => m.IsWell)</span>
        </div>
    </div>

</div>